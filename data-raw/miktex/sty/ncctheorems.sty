  \addto\captionsrussian{%
    \def\theoremname{{\cyr\CYRT\cyre\cyro\cyrr\cyre\cyrm\cyra}}%
    \def\lemmaname{{\cyr\CYRL\cyre\cyrm\cyrm\cyra}}%
    \def\propositionname{%
